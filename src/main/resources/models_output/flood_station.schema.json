{
  "$id": "flood_station.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "personsInfo",
    "address"
  ],
  "properties": {
    "zip": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "personsInfo": {
      "type": "object",
      "description": "An array of persons living at this address",
      "properties": {
        "persons": {
          "$ref": "personsInfo.schema.json"
        }
      }
    }
  }
}