{
  "$id": "person_info_medical_record.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "medical record",
  "type": "object",
  "required": [
    "firstName",
    "lastName"
  ],
  "properties": {
    "medications": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z]+:[0-9]mg$"
      }
    },
    "allergies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}